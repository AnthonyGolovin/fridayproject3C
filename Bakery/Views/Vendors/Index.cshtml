@using Bakery.Models;

<h1>Pierres Bakery:</h1>
@if (Model.Count == 0)
{
  <p>You have no vendors! So sad :(</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></li>
  }
</ul>

<a href="/vendors/new">Add a vendor</a>

<form action="/vendors/delete" method="post">
  <button type="submit" name="button">Clear vendor list</button>
</form>