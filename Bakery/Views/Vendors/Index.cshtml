@using Bakery.Models;

  <!DOCTYPE html>
  <html>
    <head>
      <title>Welcome Pierre</title>
      <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
     <div class="jumbotron" id="vendorDirectory">
        <h1>Pierres Bakery:</h1>
        @if (Model.Count == 0)
        {
          <p>"You have no vendors! So sad :("</p>
        }
        <ul>
          @foreach (Vendor vendor in Model)
          {
            <h2><li><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></li></h2>
          }
        </ul>

        <h4><a href="/vendors/new">Add a vendor</a></h4>

        <form action="/vendors/delete" method="post">
          <h2><button type="submit" name="button">Clear vendor list</button></h2>
        </form>
      </div>
    </body>
  </html>;
