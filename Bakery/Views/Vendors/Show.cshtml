  @using Bakery.Models;
  <!DOCTYPE html>
  <html>
    <head>
      <title>Welcome Pierre</title>
      <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
       <div class="jumbotron" id="vendorDirectory">
        <h1>@Model["vendor"].VendorName</h1>
        <h2>@Model["vendor"].Description</h2>
        <a href='/vendors/new'>Add another Vendor</a>
        <a href='/vendors'>View all Vendors</a>
        <a href='/vendors/@Model["vendor"].Id/orders/new'>Add an order</a>
        
        <ol>
        @foreach (Order order in @Model["orders"])
        {
          <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
        }
        </ol>
        
       </div>
    </body>
  </html>;

